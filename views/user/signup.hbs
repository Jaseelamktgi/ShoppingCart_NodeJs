<div class="row">
    <div class="col-md-6 m-auto">
        <div class="conatiner ml-5 pl-5">
            <h2 class="text-center mt-5">Create new account</h2>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label for="Full-Name">Full Name</label>
                    <input type="text" placeholder="Enter full name" class="form-control" name="fullName" required="">
                </div>
                 <div class="form-group">
                    <label for="Full-Name" >Email Address</label>
                    <input type="email" placeholder="Enter email address" class="form-control" name="Email" required="">
                </div>
                 <div class="form-group">
                    <label for="Full-Name" >Password</label>
                    <input type="Password" placeholder="Enter Password" class="form-control" name="Password" required="">
                </div>
                <a href="/login">Already have an acoount ?</a>
                <button type="submit" class="btn btn-primary float-right">Signup</button>

            </form>
        </div>
    </div>
</div>