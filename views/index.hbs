{{!---------- Product dispaly section ------------}}
<section>
    <div class="container mt-3">
        <div class="row">
            {{#each products}}
            <div class="col-md-3 pt-5">
                <div class="card" style="width: 15rem;">
                    <img class="card-img-top" src="/product-images/{{_id}}.jpg" style="height:18rem;"
                        alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        <p class="card-title">â‚¹{{price}}<p>
                        <p class="card-text">{{description}}</p>
                        <button onclick="addToCart('{{_id}}')" id="" class="btn btn-primary">Add to
                            Cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
    