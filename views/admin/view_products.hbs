{{!--------- Admin Dashboard : Product Listing ---------}}
<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Book Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{name}}</td>
                    <td>{{category}}</td>
                    <td>{{description}}</td>
                    <td>{{price}}</td>
                    <td><img src="/product-images/{{_id}}.jpg" style="width: 50px;" height="50px" alt=""></td>
                    <td><a href="/admin/edit-product/{{_id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-product/{{_id}}" onclick="return confirm('Are you want to delete {{name}}')" class="btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>


        </table>
    </div>
</section>